@if (User.Identity.IsAuthenticated)
{
  <ul class="navbar-nav navbar-right">
    <li class="nav-item">
      <span class="navbar-text">Hello, @User.Identity.Name</span> &nbsp;
      <a onclick="document.getElementById('logout_form').submit();" style="cursor: pointer;">Log out</a>
    </li>
    <li>
      <!-- if[UserProfile] --> 
      <a class="nav-link text-dark" asp-controller="Account" asp-action="Profile" id="profile-button">Profile</a>
      <!-- endif[UserProfile] -->
    </li>
  </ul>
  <form asp-controller="Account" asp-action="Logout" method="post" id="logout_form"></form>
}
else
{
  <ul class="navbar-nav navbar-right">
    <li>
      <a class="nav-link text-dark" asp-controller="Account" asp-action="Login" id="login-button">Login</a>
    </li>
  </ul>
}

